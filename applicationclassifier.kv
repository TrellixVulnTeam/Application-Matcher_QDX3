<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (0.4, 0.7, 0, 0.4)
            Rectangle:
                size: self.size
                pos: self.pos
        MDLabel:
            text: "Application Matcher"
            halign: "center"
            color: (1, 1, 1, 1)
            font_size: "35dp"
            pos_hint: {"center_y": 0.95}
        MDLabel:
            text: "Match CVs against requested qualities"
            font_size: "25dp"
            halign: "center"
            color: (1, 1, 1, 1)
            pos_hint: {"center_y": 0.9}
        MDCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            size_hint: [0.75, 0.8]
            BoxLayout:
                orientation: "horizontal"
                BoxLayout:
                    size_hint: [0.1, 1]
                BoxLayout:
                    orientation: "vertical"
                    MDTextField:
                        id: hk
                        hint_text: "Hard Keys"
                        mode: "rectangle"
                    BoxLayout:
                        size_hint: [1, 0.5]
                        orientation: "horizontal"
                        MDLabel:
                            text: "Hard Keys Significance:"
                        MDSlider:
                            id: hk_slider
                            min: 0
                            max: 10
                            value: 10
                    MDTextField:
                        id: sk
                        hint_text: "Soft Keys"
                        mode: "rectangle"
                    BoxLayout:
                        size_hint: [1, 0.5]
                        orientation: "horizontal"
                        MDLabel:
                            text: "Soft Keys Significance:"
                        MDSlider:
                            id: sk_slider
                            min: 0
                            max: 10
                            value: 10
                    BoxLayout:
                        size_hint: [1, 1]
                        ScrollView:
                            MDList:
                                id: cv_lst
                    BoxLayout:
                        size_hint: [1, 0.3]
                        padding: [0, 0, 0, 20]
                        MDRaisedButton:
                            text: "MATCH"
                            md_bg_color: 0, 0.6, 0.3, 0.7
                            on_release:
                                root.match()
                BoxLayout:
                    size_hint: [0.1, 1]
        MDCard:
            id: res_card
            pos_hint: {"center_x": -0.5, "center_y": 0.45}
            size_hint: [0.75, 0.8]
            ScrollView:
                MDList:
                    id: res_lst
            BoxLayout:
                size_hint: [0.2, 0.2]
                padding: [0, 0, 0, 10]
                MDRaisedButton:
                    text: "BACK"
                    md_bg_color: 0, 0.6, 0.3, 0.7
                    on_release:
                        root.go_back()
        MDCard:
            orientation: "horizontal"
            pos_hint: {"center_y": -0.5}
            size_hint: [1, 0.5]
            id: help_card
            BoxLayout:
                MDLabel:
                    id: hl_left
                    text: "HOW TO USE:\n Drag & Drop pdf files into the window. \n Hard Keys are skills such as programming or carpenter"
            BoxLayout:
                MDLabel:
                    id: hl_right
                    text: "HOW TO USE:\n Drag & Drop pdf files into the window. \n Hard Keys are skills such as programming or carpenter"

        MDFloatingActionButton:
            icon: "help"
            on_release:
                root.help()